      .cevisama-header-text {
        font-family: 'Montserrat', Helvetica, Arial, sans-serif;
        font-size: 32px;
        font-weight: 700;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      }
      .cevisama-sub-header {
        font-family: 'Montserrat', Helvetica, Arial, sans-serif;
        font-size: 22px;
        font-weight: 700;
        color: #333333;
      }
      .cevisama-paragraph {
        font-family: 'Montserrat', Helvetica, Arial, sans-serif;
        font-size: 16px;
        line-height: 1.7;
        color: #555555;
      }
      .footer-text {
        font-family: 'Montserrat', Helvetica, Arial, sans-serif;
