<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="'Montserrat', Helvetica, Arial, sans-serif" />
      <mj-text color="#333333" font-size="16px" line-height="24px" />
      <mj-section background-color="#ffffff" padding="20px 0" />
